<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="70dp" >

	<TextView
		android:id="@+id/itemname"
		android:layout_width="550px"
		android:layout_height="wrap_content"
		android:textSize="@dimen/font_size"
		android:textStyle="bold"
		android:textColor="#000000"
		android:paddingLeft="3px"
		android:paddingTop="3px"
		android:text="[PCP]"
		android:gravity="left" />

	<TextView
		android:id="@+id/itembundle"
		android:layout_width="550px"
		android:layout_height="wrap_content"
		android:textSize="@dimen/font_size"
		android:textStyle="bold"
		android:textColor="#000000"
		android:paddingLeft="3px"
		android:paddingTop="3px"
		android:layout_marginLeft="100px"
		android:text="BBBBBBBBBBBBBBBBBBBBB"
		android:layout_below="@+id/itemname"
		android:visibility="gone"
		android:gravity="left" />

	<TextView
		android:id="@+id/itemqty"
		android:text="AAAAAAAAAAAAAAA"
		android:layout_width="55dp"
		android:layout_height="wrap_content"
		android:textSize="@dimen/font_size"
		android:textColor="#000000"
		android:paddingLeft="3px"
		android:paddingRight="3px"
		android:layout_below="@+id/itembundle"
		android:gravity="right" />

	<TextView

		android:id="@+id/lblmultiply"
		android:layout_width="50dp"
		android:layout_height="wrap_content"
		android:textSize="@dimen/font_size"
		android:textColor="#000000"
		android:layout_below="@+id/itembundle"
		android:layout_toRightOf="@+id/itemqty"
		android:gravity="right"
		android:text="x  @" />


	<TextView
		android:text="AAAAAAAAAAAAAAA"
		android:id="@+id/itemprice"
		android:layout_width="170px"
		android:layout_height="wrap_content"
		android:textSize="@dimen/font_size"
		android:textColor="#000000"
		android:paddingRight="3px"
		android:paddingLeft="4px"
		android:layout_below="@+id/itembundle"
		android:layout_toRightOf="@+id/lblmultiply"
		android:gravity="left" />

	<TextView
		android:text="DISCDISCDISC"
		android:id="@+id/itemdisc"
		android:layout_width="200px"
		android:layout_height="wrap_content"
		android:textSize="@dimen/font_size"
		android:textColor="#000000"
		android:paddingRight="3px"
		android:paddingLeft="3px"
		android:gravity="left"
		android:layout_alignBaseline="@+id/itemprice"
		android:layout_alignBottom="@+id/itemprice"
		android:layout_toEndOf="@+id/itemprice" />

	<TextView
		android:id="@+id/lblequal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/font_size"
		android:textColor="#000000"
		android:paddingRight="3px"
		android:paddingLeft="3px"
		android:layout_toRightOf="@+id/itemdisc"
		android:layout_below="@+id/itembundle"
		android:text="=" />

	<TextView
		android:text="AAAAAAAAAAAAAAA"
		android:id="@+id/itemtotal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textSize="@dimen/font_size"
		android:textColor="#000000"
		android:paddingRight="3px"
		android:paddingLeft="3px"
		android:layout_toRightOf="@+id/lblequal"
		android:layout_below="@+id/itembundle"
		android:gravity="right"
		android:textStyle="bold"/>
</RelativeLayout>