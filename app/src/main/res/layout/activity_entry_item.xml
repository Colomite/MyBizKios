<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kreators.mybizkios.PartnerEntryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/satulayout"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/headerkirilayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="3"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/itemImage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_weight="0.2"
                        android:adjustViewBounds="true"
                        android:padding="1dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/logo_mybiz" />

                    <TextView
                        android:id="@+id/headername"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="20dp"
                        android:text="MyBiz Kios"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_header_master" />
                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:id="@+id/layoutscroll"
                android:layout_width="fill_parent"
                android:layout_height="600dp"
                android:layout_marginTop="100dp"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/summarylayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/layoutdetail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/satulayout"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:id="@+id/layout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="0dp"
                            android:gravity="left"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/labelcode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Code *"
                                android:textSize="@dimen/font_size" />

                            <LinearLayout
                                android:id="@+id/layedt1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edtcode"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="text|textCapCharacters"
                                    android:textSize="@dimen/font_size" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="3dp"
                            android:gravity="left"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/labelname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textSize="@dimen/font_size" />

                            <LinearLayout
                                android:id="@+id/layedt2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edtname"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="text"
                                    android:textSize="@dimen/font_size" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="3dp"
                            android:gravity="left"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/labelvendorcode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vendor Code"
                                android:textSize="@dimen/font_size" />

                            <LinearLayout
                                android:id="@+id/layedt3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edtvendorcode"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="text"
                                    android:textSize="@dimen/font_size" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="3dp"
                            android:gravity="left"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/labelcusttype"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Department"
                                android:textSize="@dimen/font_size" />

                            <LinearLayout
                                android:id="@+id/layedt4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/edtdep"
                                    android:layout_width="280dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="left"
                                    android:inputType="text"
                                    android:textSize="@dimen/font_size" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="3dp"
                            android:gravity="left"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/labelitemtype"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Item Type"
                                android:textSize="@dimen/font_size" />

                            <LinearLayout
                                android:id="@+id/layedt5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/edtitemtype"
                                    android:layout_width="180dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="left"
                                    android:inputType="text"
                                    android:textSize="@dimen/font_size" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="3dp"
                            android:gravity="left"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/labelstatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status"
                                android:textSize="@dimen/font_size" />

                            <LinearLayout
                                android:id="@+id/layedt6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/edtstatus"
                                    android:layout_width="180dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="left"
                                    android:inputType="text"
                                    android:textSize="@dimen/font_size" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutItemBarcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="3dp"
                            android:gravity="left"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Barcode:"
                                android:textSize="@dimen/font_size" />

                            <Button
                                android:id="@+id/btnScanBarcode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Scan Barcode" />

                            <TextView
                                android:id="@+id/textViewBarcode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutprice"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/satulayout"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Image"
                            android:textSize="@dimen/font_size" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="left"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/layout_bg_grey_transparent" />

                            <Button
                                android:id="@+id/btnbrowse"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-2dp"
                                android:text="Browse" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutb1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="0dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/label1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="1"
                                android:textSize="@dimen/font_size" />

                            <LinearLayout
                                android:id="@+id/layedtb1"
                                android:layout_width="280dp"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edt1"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="number|textNoSuggestions"
                                    android:text="0"
                                    android:textAlignment="textEnd"
                                    android:textSize="@dimen/font_size" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutb2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="0dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/label2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="2"
                                android:textSize="@dimen/font_size" />

                            <LinearLayout
                                android:id="@+id/layedtb2"
                                android:layout_width="280dp"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edt2"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="number|textNoSuggestions"
                                    android:text="0"
                                    android:textAlignment="textEnd"
                                    android:textSize="@dimen/font_size" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutb3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="0dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/label3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="3"
                                android:textSize="@dimen/font_size" />

                            <LinearLayout
                                android:id="@+id/layedtb3"
                                android:layout_width="280dp"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edt3"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="number|textNoSuggestions"
                                    android:text="0"
                                    android:textAlignment="textEnd"
                                    android:textSize="@dimen/font_size" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutb4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="0dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/label4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="4"
                                android:textSize="@dimen/font_size" />

                            <LinearLayout
                                android:id="@+id/layedtb4"
                                android:layout_width="280dp"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edt4"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="number|textNoSuggestions"
                                    android:text="0"
                                    android:textAlignment="textEnd"
                                    android:textSize="@dimen/font_size" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutb5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="0dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/label5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="5"
                                android:textSize="@dimen/font_size" />

                            <LinearLayout
                                android:id="@+id/layedtb5"
                                android:layout_width="280dp"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edt5"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="number|textNoSuggestions"
                                    android:text="0"
                                    android:textAlignment="textEnd"
                                    android:textSize="@dimen/font_size" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutmaterial"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/satulayout"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/bundlelayout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/gbundlelayout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbundle"
                                    android:layout_width="130dp"
                                    android:layout_height="50dp"
                                    android:gravity="right"
                                    android:paddingTop="5dp"
                                    android:text="Penyusun*"
                                    android:textSize="@dimen/font_size" />

                                <EditText
                                    android:id="@+id/edtitem"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="top"
                                    android:layout_marginTop="3dp"
                                    android:layout_weight=".70"
                                    android:gravity="left"
                                    android:hint="Search for item"
                                    android:inputType="text"
                                    android:selectAllOnFocus="true"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/font_size" />

                                <EditText
                                    android:id="@+id/edtqtyitem"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="top"
                                    android:layout_marginTop="3dp"
                                    android:layout_weight=".15"
                                    android:gravity="right"
                                    android:hint="Qty"
                                    android:inputType="text|number|textNoSuggestions"
                                    android:selectAllOnFocus="true"
                                    android:textSize="@dimen/font_size" />

                                <Button
                                    android:id="@+id/btnaddnewitem"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="bottom"
                                    android:layout_weight=".15"
                                    android:background="@color/colorPrimary"
                                    android:gravity="center"
                                    android:text="Add"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/font_size" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutlistatas"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginRight="10dp"
                                android:background="#3af"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/titemname"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:gravity="left"
                                    android:text="Item Name"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/font_size" />

                                <TextView
                                    android:id="@+id/titemqty"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="0.1"
                                    android:gravity="right"
                                    android:text="Qty"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/font_size" />
                                <!--                        <TextView
                            android:id="@+id/titemsatuan"
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size"
                            android:gravity="left"
                            android:text="Satuan"
                            android:textColor="#FFFFFF"/>-->


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutlist"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="0.82"
                                android:background="#FFFFFF"
                                android:orientation="vertical">

                                <ListView
                                    android:id="@+id/itemlist"
                                    android:layout_width="fill_parent"
                                    android:layout_height="200dp" />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/layoutbtntab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btndetail"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:text="Detail"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.01"
                    android:text="Customer Category"
                    android:textSize="@dimen/font_size" />


                <Button
                    android:id="@+id/btnproperties"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:text="Properties"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.01"
                    android:text="Customer Category"
                    android:textSize="@dimen/font_size" />

                <Button
                    android:id="@+id/btnMaterial"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:text="Item Material"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="700dp"
                android:gravity="left"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnsave"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rb_bluedark"
                    android:text="@string/saveButton"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/font_size" />

                <Button
                    android:id="@+id/btncancel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rb_bluedark"
                    android:text="@string/exitButton"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/font_size" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
