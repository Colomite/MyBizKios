<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.kreators.mybizkios.SalesReturnActivity">

    <RelativeLayout
        android:id="@+id/activity_pos"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/layoututama"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:id="@+id/layoututamaatas1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:gravity="right"
                android:weightSum="1">

                <TextView
                    android:id="@+id/labeltotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="right"
                    android:text="TOTAL :"
                    android:layout_weight="0.04" />

                <TextView
                    android:id="@+id/edttotal"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:text="100,000,000"
                    android:layout_weight="0.20" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoututamabawah"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#B0B0B0"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutkiri"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.80"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutkiriinside"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edtitem"
                            android:layout_width="0dp"
                            android:layout_weight=".70"
                            android:imeOptions="flagNoExtractUi"
                            android:layout_height="fill_parent"
                            android:textSize="@dimen/font_size"
                            android:layout_marginTop="3dp"
                            android:layout_gravity="top"
                            android:gravity="left"
                            android:inputType="text"
                            android:selectAllOnFocus="true"
                            android:textColor="#000000"
                            android:hint="Search for item" />

                        <EditText
                            android:id="@+id/edtqtyitem"
                            android:layout_width="0dp"
                            android:layout_weight=".10"
                            android:layout_height="50dp"
                            android:textSize="@dimen/font_size"
                            android:layout_marginTop="3dp"
                            android:layout_gravity="top"
                            android:gravity="left"
                            android:inputType="text|number|textNoSuggestions"
                            android:selectAllOnFocus="true"
                            android:hint="Qty" />

                        <Button
                            android:id="@+id/btnaddnewitem"
                            android:layout_width="0dp"
                            android:layout_weight=".15"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:layout_gravity="bottom"
                            android:textColor="#FFFFFF"
                            android:background="@color/colorAccent"
                            android:textSize="@dimen/font_size"
                            android:text="Add" />

                        <ImageButton
                            android:id="@+id/btnscan"
                            android:layout_width="0dp"
                            android:layout_weight=".15"
                            android:layout_height="50dp"
                            android:textSize="@dimen/font_size"
                            android:gravity="center"
                            android:layout_gravity="bottom"
                            android:visibility="gone"
                            android:src="@drawable/barcode"/>


                    </LinearLayout>

                    <ListView
                        android:id="@+id/itemlist"
                        android:layout_width="fill_parent"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutkanan"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/layoutbawah"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@drawable/shape"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnsave"
                            android:layout_width="0dp"
                            android:layout_weight=".30"
                            android:layout_height="60dp"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center"
                            android:drawableTop="@drawable/bayar1"
                            android:text="Bayar"
                            android:gravity="center"
                            android:elevation="0dp" />

                        <Button
                            android:id="@+id/btnsuspend"
                            android:layout_width="0dp"
                            android:layout_weight=".30"
                            android:layout_height="60dp"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center"
                            android:drawableTop="@drawable/suspend"
                            android:visibility="gone"
                            android:text="Suspend"
                            android:gravity="center"
                            />

                        <Button
                            android:id="@+id/btnunsuspend"
                            android:layout_width="0dp"
                            android:layout_weight=".30"
                            android:layout_height="60dp"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center"
                            android:drawableTop="@drawable/suspend"
                            android:visibility="gone"
                            android:text="Unsuspend"
                            android:gravity="center"
                            />
                        <Button
                            android:id="@+id/btnprint"
                            android:layout_width="0dp"
                            android:layout_weight=".30"
                            android:layout_height="60dp"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center"
                            android:drawableTop="@drawable/print"
                            android:visibility="gone"
                            android:text="Print"
                            android:gravity="center"
                            />

                        <Button
                            android:id="@+id/btncancel"
                            android:layout_width="0dp"
                            android:layout_weight=".30"
                            android:layout_height="60dp"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center"
                            android:drawableTop="@drawable/cancel"
                            android:text="Cancel"
                            android:gravity="center"
                            />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
