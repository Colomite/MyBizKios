<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kreators.mybizkios.LoginActivity">

    <LinearLayout
        android:id="@+id/satulayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/headerkirilayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="3"
            android:background="@color/colorPrimary"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.2"
                android:adjustViewBounds="true"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/logo_mybiz" />

            <TextView
                android:id="@+id/headername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:text="MyBiz Kios"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_header_master" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutUtama1"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <TextView
                android:id="@+id/lbl11"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_height"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/btncustcat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custtype"
                android:scaleType="fitXY"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_size" />

            <TextView
                android:id="@+id/lbl12"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_height"
                android:layout_weight="0.05" />

            <Button
                android:id="@+id/btnuser"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/userbaru"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_size" />


            <TextView
                android:id="@+id/lbl2"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_height"
                android:layout_weight="0.1" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutUtama2"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/lbl13"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_height"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/btncashbank"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bank"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_size" />

            <TextView
                android:id="@+id/lbl22"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_height"
                android:layout_weight="0.05" />

            <Button
                android:id="@+id/btnsession"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/session"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_size" />

            <TextView
                android:id="@+id/lbl23"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_height"
                android:layout_weight="0.1" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="350dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutUtama21"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <TextView
                android:id="@+id/lbl211"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_height"
                android:layout_weight="0.1" />

            <ImageView
                android:id="@+id/btnpos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:orientation="vertical"
                android:scaleType="fitXY"
                android:src="@drawable/sesi_kasir"></ImageView>

            <TextView
                android:id="@+id/lbl1212"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_height"
                android:layout_weight="0.05" />

            <Button
                android:id="@+id/btnsalesrep"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/customer"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_size" />
            android:text="CUST"/>

            <TextView
                android:id="@+id/lbl213"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_height"
                android:layout_weight="0.1" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutUtama22"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/lbl221"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_height"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/btnsalesret"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/customer"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_size" />
            android:text="ITEM"/>

            <TextView
                android:id="@+id/lbl222"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_height"
                android:layout_weight="0.05" />

            <Button
                android:id="@+id/btnutility"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/customer"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_size" />
            android:text="PURCHASE"/>

            <TextView
                android:id="@+id/lbl223"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_height"
                android:layout_weight="0.1" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
